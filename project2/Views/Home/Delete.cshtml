@{
    ViewData["Title"] = "Delete Appointment";
}

@model AppointmentForm

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the appointment for @Model.GroupName?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="AppointmentsList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="AppointmentID" />
</form>
